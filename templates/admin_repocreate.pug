doctype
html(lang='en')
    head
        meta(charset='utf-8')
        title StrikeRepo | Admin Repo
        link(rel="stylesheet", href="/css/semantic.min.css")
        link(rel="stylesheet", href="/css/home.css")
        script(src="/js/jquery.js")
        script(src="/js/utils.js")
        script(src="/js/semantic.js")

div(class="ui inverted segment")
    div(class="ui inverted secondary pointing menu")
        a(class="item" href="./") Repositories
        a(class="item", href="artefacts") Add Artefact
        a(class="active item") Create Repo
        a(class="item", href="users") Manage Users
        div(class="right menu")
            a(class="item" href="../") Back

section(class="centerform")
    div(class="ui inverted segment")
        div(class="ui inverted form")
            form(action="./add_repo", method="POST")
                div(class="field")
                    input#name(type="text", name="name", placeholder="Name")
                div(class="field ui checkbox")
                    input#onlyadmin(type="checkbox", name="onlyadmin", value="off")
                    label Only Admin ?
                div(class="field")
                    button(class="ui inverted purple button", type="submit") Create

script.
    $('form')
        .form({
            on: 'blur',
            fields : {
                name: {
                    identifier : 'name',
                    rules: [
                        {
                            type: 'empty',
                            prompt : 'Incorrect Name !'
                        }
                    ]
                }